vrrp_script chk_http {
    script "/usr/local/bin/check_http.sh"
    interval 2
    weight -20
}

vrrp_instance VI_1 {
    state BACKUP
    interface ens3
    virtual_router_id 51
    priority 99
    advert_int 1
    virtual_ipaddress {
        {{ hostvars[p-tag-proxy3]['ansible_default_ipv4']['address'] }
    }
     }
        track_script {
        chk_http
    }
}

